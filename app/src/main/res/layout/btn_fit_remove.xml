<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/confirmationButtonBarFitRemove"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontal_line_height"
        android:background="@color/horizontal_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/line"
        android:background="@color/white_opacity_80"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/confirmationButtonFit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_fit"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/buttonIconFit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="2.5dp"
                android:src="@drawable/ic_check"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/buttonTextFit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="@string/fit"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/confirmationButtonRemove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_remove"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/buttonIconRemove"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="2.5dp"
                android:src="@drawable/ic_trash"
                android:tint="@color/grey_600" />

            <TextView
                android:id="@+id/buttonTextRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="@string/remove_from_my_agenda"
                android:textColor="@color/grey_600"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/confirmationButtonPast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/confirmationButtonPastText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@string/agenda_status_past"
                android:textColor="@color/grey_500"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>