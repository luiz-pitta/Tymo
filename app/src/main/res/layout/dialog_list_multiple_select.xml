<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg_dialog_message"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_message"
        android:gravity="center"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingTop="40dp"
        android:paddingRight="20dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Text"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Text"
            android:textColor="@color/grey_800"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontal_line_height"
        android:background="@color/horizontal_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerSelectView"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <View
        android:id="@+id/horizontalLine2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontal_line_height"
        android:background="@color/horizontal_line" />

    <LinearLayout
        android:id="@+id/buttonsBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:divider="@drawable/divider_dialog_buttons"
        android:orientation="horizontal"
        android:showDividers="middle">

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonText1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Text"
                android:textColor="@color/grey_500"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/buttonIcon1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_share"
                android:tint="@color/deep_purple_300"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Text"
                android:textColor="@color/deep_purple_300"
                android:textSize="16sp"
                android:visibility="visible"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/buttonIcon2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_person"
                android:tint="@color/grey_500"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>