<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grey_300"
        android:hint="@string/hint_title"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:maxLength="100"
        android:textColor="@color/grey_600"
        android:textColorHint="@color/grey_400"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/grey_400"
        android:text="0 de 100"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/addTagBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/addTagIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/ic_add"
                android:tint="@color/deep_purple_400" />

            <TextView
                android:id="@+id/addTagText"
                android:layout_toRightOf="@+id/addTagIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/act_tags"
                android:textColor="@color/deep_purple_400"
                android:textSize="14sp" />

        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <com.cunoraz.tagview.TagView
                android:id="@+id/tagGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/grey_300"
        android:gravity="center_vertical"
        android:hint="@string/hint_description"
        android:inputType="textMultiLine"
        android:minHeight="40dp"
        android:textColor="@color/grey_600"
        android:textColorHint="@color/grey_400"
        android:textSize="14sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/whatsAppGroupLinkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/whatsAppGroupIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_whatsapp" />

        <EditText
            android:id="@+id/whatsAppGroupLink"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/grey_300"
            android:gravity="center_vertical"
            android:hint="@string/hint_whatsapp_group_link"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="@color/grey_600"
            android:textColorHint="@color/grey_400"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>