<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_act_edit_box_2"
        android:gravity="center_vertical"
        android:hint="@string/hint_title_opcional"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="100"
        android:padding="10dp"
        android:textColor="@color/grey_600"
        android:textColorHint="@color/grey_400"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/titleMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="0 de 100"
        android:textColor="@color/grey_400"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_calendar_clock"
            android:tint="@color/grey_600" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/date_start"
                    android:textColor="@color/grey_600"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/dateStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_act_edit_box_2"
                        android:clickable="true"
                        android:gravity="center"
                        android:hint="@string/hint_date"
                        android:lines="1"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/grey_600"
                        android:textColorHint="@color/grey_400"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/clearDateStart"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:rotation="45"
                        android:src="@drawable/ic_add"
                        android:tint="@color/grey_400" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/timeStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_act_edit_box_2"
                        android:clickable="true"
                        android:gravity="center"
                        android:hint="@string/hint_time"
                        android:lines="1"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/grey_600"
                        android:textColorHint="@color/grey_400"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/clearTimeStart"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:rotation="45"
                        android:src="@drawable/ic_add"
                        android:tint="@color/grey_400" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/date_end"
                    android:textColor="@color/grey_600"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/dateEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_act_edit_box_2"
                        android:clickable="true"
                        android:gravity="center"
                        android:hint="@string/hint_date"
                        android:lines="1"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/grey_600"
                        android:textColorHint="@color/grey_400"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/clearDateEnd"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:rotation="45"
                        android:src="@drawable/ic_add"
                        android:tint="@color/grey_400" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/timeEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_act_edit_box_2"
                        android:clickable="true"
                        android:gravity="center"
                        android:hint="@string/hint_time"
                        android:lines="1"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/grey_600"
                        android:textColorHint="@color/grey_400"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/clearTimeEnd"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:rotation="45"
                        android:src="@drawable/ic_add"
                        android:tint="@color/grey_400" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/repeatAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/progressRepeatAdd"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/repeatAddIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_refresh"
                        android:tint="@color/deep_purple_400" />

                    <TextView
                        android:id="@+id/repeatAddText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/repeatAddIcon"
                        android:text="@string/repeat"
                        android:textColor="@color/deep_purple_400"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/repeatText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="Repeat Text"
        android:textColor="@color/grey_600"
        android:textSize="12sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/repeatBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/repeat_frequence"
            android:textColor="@color/grey_600"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/bg_act_edit_box_2"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/repeatPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:textSize="14sp"
                app:ms_arrow_tint="@color/grey_600"
                app:ms_background_color="@color/grey_50"
                app:ms_dropdown_height="wrap_content"
                app:ms_text_color="@color/grey_600" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/repeatNumberBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/repeat_how_many_times"
            android:textColor="@color/grey_600"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/repeatMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/repeat_max_time"
            android:textColor="@color/grey_400"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/repeatEditText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/bg_act_edit_box_2"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:lines="1"
            android:maxLength="3"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/grey_600"
            android:textColorHint="@color/grey_400"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/sendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/flag_who_will_be_signalized"
        android:textColor="@color/deep_purple_400"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/sendBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_act_edit_box_2"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/sendPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textSize="14sp"
            android:textStyle="bold"
            app:ms_arrow_tint="@color/grey_900"
            app:ms_background_color="@color/grey_50"
            app:ms_dropdown_height="wrap_content"
            app:ms_text_color="@color/grey_900" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sendPicker"
            android:text="@string/feed_visibility_3"
            android:textColor="@color/grey_600"
            android:textSize="12sp"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/guestBox"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/guestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/flag_people_selected"
            android:textColor="@color/deep_purple_400"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/guestsNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_qty_guests"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <include
        android:id="@+id/profilesPhotos"
        layout="@layout/list_profiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/whoCanInviteBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/who_can_signalize"
            android:textColor="@color/grey_900"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feed_visibility_3"
            android:textColor="@color/grey_900"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>