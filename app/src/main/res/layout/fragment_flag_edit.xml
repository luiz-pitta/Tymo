<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_act_edit_box"
        android:hint="@string/flag_available_hint"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/grey_600"
        android:textColorHint="@color/grey_400"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_calendar_clock"
            android:tint="@color/grey_600" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/start"
                    android:textColor="@color/grey_600"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/dateStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_act_edit_box"
                    android:gravity="center"
                    android:hint="@string/date_hint"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/grey_600"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/timeStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_act_edit_box"
                    android:gravity="center"
                    android:hint="@string/time_hint"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/grey_600"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/end"
                    android:textColor="@color/grey_600"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/dateEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_act_edit_box"
                    android:gravity="center"
                    android:hint="@string/date_hint"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/grey_600"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/timeEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_act_edit_box"
                    android:gravity="center"
                    android:hint="@string/time_hint"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/grey_600"
                    android:textColorHint="@color/grey_400"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/repeatBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/repeatIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_refresh"
            android:tint="@color/grey_600" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_act_edit_box"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/repeatPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:textColor="@color/grey_600"
                android:textSize="14sp"
                app:ms_arrow_tint="@color/grey_600"
                app:ms_dropdown_height="wrap_content"
                app:ms_dropdown_max_height="120dp"
                app:ms_text_color="@color/grey_600" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/repeatNumberBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/repeat_how_many_times"
            android:textColor="@color/grey_600"
            android:textSize="14sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/repeatEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_act_edit_box"
            android:gravity="center"
            android:hint="00"
            android:inputType="number"
            android:lines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/grey_600"
            android:textColorHint="@color/grey_400"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sendBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/who_will_be_signalized"
            android:textColor="@color/deep_purple_400"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="7dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_act_edit_box"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/sendPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/grey_900"
                android:textSize="14sp"
                android:textStyle="bold"
                app:ms_arrow_tint="@color/grey_900"
                app:ms_dropdown_height="wrap_content"
                app:ms_dropdown_max_height="120dp"
                app:ms_text_color="@color/grey_900" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectionGuestBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/signalized"
                android:textColor="@color/deep_purple_400"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/guestsNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box_qty_guests"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <include
            android:id="@+id/profilesPhotos"
            layout="@layout/list_profiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

    </LinearLayout>


</LinearLayout>