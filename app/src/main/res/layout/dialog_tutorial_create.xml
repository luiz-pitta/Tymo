<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="75dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/tutorialIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_shape_oval_deep_purple_400_corners"
                android:padding="10dp"
                android:src="@drawable/ic_add"
                android:tint="@color/deep_purple_400" />

            <TextView
                android:id="@+id/tutorialTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tutorialIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="@string/tutorial_create_title"
                android:textColor="@color/deep_purple_400"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:id="@+id/activityBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/activityIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_add_cube"
                    android:tint="@color/grey_500" />

                <TextView
                    android:id="@+id/activityText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/activityIcon"
                    android:text="@string/tutorial_create_text_1"
                    android:textColor="@color/grey_900"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activityText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activityText1"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/activityIcon"
                    android:text="@string/tutorial_create_text_2"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reminderBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/reminderIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_add_reminder"
                    android:tint="@color/grey_500" />

                <TextView
                    android:id="@+id/reminderText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/reminderIcon"
                    android:text="@string/tutorial_create_text_3"
                    android:textColor="@color/grey_900"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reminderText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reminderText1"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/reminderIcon"
                    android:text="@string/tutorial_create_text_4"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/flagBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/flagIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_add_flag"
                    android:tint="@color/grey_500" />

                <TextView
                    android:id="@+id/flagText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/flagIcon"
                    android:text="@string/tutorial_create_text_5"
                    android:textColor="@color/grey_900"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/flagText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/flagText1"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/flagIcon"
                    android:text="@string/tutorial_create_text_6"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/horizontalLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_line_height"
            android:background="@color/horizontal_line"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/buttonsBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:divider="@drawable/divider_dialog_buttons"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:visibility="gone">

            <TextView
                android:id="@+id/buttonBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/back"
                android:textAllCaps="true"
                android:textColor="@color/grey_400"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/buttonSkip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/skip"
                android:textAllCaps="true"
                android:textColor="@color/deep_purple_300"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>