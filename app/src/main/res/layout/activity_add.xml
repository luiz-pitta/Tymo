<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_add"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/actButtonBox"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/btn_add_act_corners"
                android:gravity="center">

                <ImageView
                    android:id="@+id/actButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_add_act"
                    android:padding="5dp"
                    android:src="@drawable/ic_add_cube"
                    android:tint="@color/white" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/act"
                android:textAllCaps="true"
                android:textColor="@color/deep_purple_400"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/reminderButtonBox"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/btn_add_flag_corners"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/reminderButton"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/btn_add_flag"
                        android:padding="5dp"
                        android:src="@drawable/ic_add_reminder"
                        android:tint="@color/deep_purple_400" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/reminder"
                    android:textAllCaps="true"
                    android:textColor="@color/deep_purple_400"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/flagButtonBox"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/btn_add_flag_corners"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/flagIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/btn_add_flag"
                        android:padding="5dp"
                        android:src="@drawable/ic_add_flag"
                        android:tint="@color/deep_purple_400" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/flag"
                    android:textAllCaps="true"
                    android:textColor="@color/deep_purple_400"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_add_close"
        android:padding="5dp"
        android:rotation="45"
        android:src="@drawable/ic_add"
        android:tint="@color/white" />

</RelativeLayout>