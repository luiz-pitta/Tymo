<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mainBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_act_main_box">

                    <ImageView
                        android:id="@+id/actionBackIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="8dp"
                        android:rotation="45"
                        android:src="@drawable/ic_add"
                        android:tint="@color/grey_600" />

                    <LinearLayout
                        android:id="@+id/textsBox"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/privacyIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_toLeftOf="@+id/text"
                            android:src="@drawable/ic_lock"
                            android:tint="@color/grey_600"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/visibility_private"
                            android:textColor="@color/grey_600"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/arrowIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/text"
                            android:src="@drawable/ms__arrow"
                            android:tint="@color/grey_600"
                            android:visibility="visible" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/pieceBox"
                        android:layout_width="110dp"
                        android:layout_height="95dp"
                        android:layout_below="@+id/textsBox"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="30dp">

                        <ImageView
                            android:id="@+id/cubeUpperBoxIcon"
                            android:layout_width="80dp"
                            android:layout_height="15dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_cube_upper_box"
                            android:tint="@color/deep_purple_400_light" />

                        <RelativeLayout
                            android:id="@+id/cubeLowerBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cubeUpperBoxIcon"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:id="@+id/cubeLowerBoxIcon"
                                android:layout_width="80dp"
                                android:layout_height="65dp"
                                android:src="@drawable/ic_cube_lower_box"
                                android:tint="@color/deep_purple_400" />

                            <ImageView
                                android:id="@+id/pieceIcon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_add_cube" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/magicWandButton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/btn_magic_wand"
                            android:padding="2dp"
                            android:src="@drawable/ic_magic_wand"
                            android:tint="@color/grey_600" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/addImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pieceBox"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/addImageIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:padding="5dp"
                            android:src="@drawable/ic_picture"
                            android:tint="@color/deep_purple_400" />

                        <TextView
                            android:id="@+id/addImageText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_image"
                            android:textColor="@color/deep_purple_400"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/loadedImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pieceBox"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/loadedImageIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:padding="5dp"
                            android:src="@drawable/ic_picture"
                            android:tint="@color/grey_600" />

                        <TextView
                            android:id="@+id/loadedImageText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_image_loaded"
                            android:textColor="@color/grey_600"
                            android:textSize="14sp" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/horizontal_line_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_act_edit_box_2"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_title"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLength="100"
                        android:padding="10dp"
                        android:textColor="@color/grey_600"
                        android:textColorHint="@color/grey_400"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/titleMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="0 de 100"
                        android:textColor="@color/grey_400"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_calendar_clock"
                            android:tint="@color/grey_600" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dp"
                                    android:text="@string/date_start"
                                    android:textColor="@color/grey_600"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp">

                                    <TextView
                                        android:id="@+id/dateStart"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_act_edit_box_2"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:hint="@string/hint_date"
                                        android:lines="1"
                                        android:paddingBottom="5dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingTop="5dp"
                                        android:textColor="@color/grey_600"
                                        android:textColorHint="@color/grey_400"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/clearDateStart"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="2dp"
                                        android:rotation="45"
                                        android:src="@drawable/ic_add"
                                        android:tint="@color/grey_400" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp">

                                    <TextView
                                        android:id="@+id/timeStart"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_act_edit_box_2"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:hint="@string/hint_time"
                                        android:lines="1"
                                        android:paddingBottom="5dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingTop="5dp"
                                        android:textColor="@color/grey_600"
                                        android:textColorHint="@color/grey_400"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/clearTimeStart"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="2dp"
                                        android:rotation="45"
                                        android:src="@drawable/ic_add"
                                        android:tint="@color/grey_400" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dp"
                                    android:text="@string/date_end"
                                    android:textColor="@color/grey_600"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp">

                                    <TextView
                                        android:id="@+id/dateEnd"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_act_edit_box_2"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:hint="@string/hint_date"
                                        android:lines="1"
                                        android:paddingBottom="5dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingTop="5dp"
                                        android:textColor="@color/grey_600"
                                        android:textColorHint="@color/grey_400"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/clearDateEnd"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="2dp"
                                        android:rotation="45"
                                        android:src="@drawable/ic_add"
                                        android:tint="@color/grey_400" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp">

                                    <TextView
                                        android:id="@+id/timeEnd"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_act_edit_box_2"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:hint="@string/hint_time"
                                        android:lines="1"
                                        android:paddingBottom="5dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingTop="5dp"
                                        android:textColor="@color/grey_600"
                                        android:textColorHint="@color/grey_400"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/clearTimeEnd"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="2dp"
                                        android:rotation="45"
                                        android:src="@drawable/ic_add"
                                        android:tint="@color/grey_400" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/repeatAdd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="10dp"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp">

                                    <ProgressBar
                                        android:id="@+id/progressRepeatAdd"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_centerInParent="true"
                                        android:visibility="gone" />

                                    <ImageView
                                        android:id="@+id/repeatAddIcon"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_refresh"
                                        android:tint="@color/deep_purple_400" />

                                    <TextView
                                        android:id="@+id/repeatAddText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/repeatAddIcon"
                                        android:text="@string/repeat"
                                        android:textColor="@color/deep_purple_400"
                                        android:textSize="14sp" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/repeatText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:text="Repeat Text"
                        android:textColor="@color/grey_600"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:id="@+id/repeatBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:text="@string/repeat_frequence"
                            android:textColor="@color/grey_600"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_act_edit_box_2"
                            android:gravity="center_vertical"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp">

                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/repeatPicker"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:textSize="14sp"
                                app:ms_arrow_tint="@color/grey_600"
                                app:ms_background_color="@color/grey_50"
                                app:ms_dropdown_height="wrap_content"
                                app:ms_dropdown_max_height="120dp"
                                app:ms_text_color="@color/grey_600" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/repeatNumberBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="@string/repeat_how_many_times"
                            android:textColor="@color/grey_600"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/repeatEditText"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_act_edit_box_2"
                            android:gravity="center"
                            android:hint="0"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:lines="1"
                            android:paddingBottom="7dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="7dp"
                            android:textColor="@color/grey_600"
                            android:textColorHint="@color/grey_400"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/repeatMax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/repeat_max_times"
                            android:textColor="@color/grey_400"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:id="@+id/addTagBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/addTagIcon"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:padding="5dp"
                                android:src="@drawable/ic_add"
                                android:tint="@color/deep_purple_400" />

                            <TextView
                                android:id="@+id/addTagText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/addTagIcon"
                                android:text="@string/act_tags"
                                android:textColor="@color/deep_purple_400"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <android.support.v4.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible">

                            <com.cunoraz.tagview.TagView
                                android:id="@+id/tagGroup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </android.support.v4.widget.NestedScrollView>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_act_edit_box_2"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_description"
                        android:inputType="textMultiLine"
                        android:maxLines="20"
                        android:minHeight="40dp"
                        android:padding="10dp"
                        android:textColor="@color/grey_600"
                        android:textColorHint="@color/grey_400"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/horizontal_line_height"
                        android:layout_marginTop="20dp"
                        android:background="@color/horizontal_line" />

                    <LinearLayout
                        android:id="@+id/locationBoxAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/locationIconAdd"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:src="@drawable/ic_location"
                            android:tint="@color/deep_purple_400" />

                        <TextView
                            android:id="@+id/locationTextAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="@string/add_local"
                            android:textColor="@color/deep_purple_400"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/locationBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp">

                        <ProgressBar
                            android:id="@+id/progressLocation"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/locationIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_location"
                            android:tint="@color/grey_600" />

                        <TextView
                            android:id="@+id/locationText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_toLeftOf="@+id/locationIcon2"
                            android:layout_toRightOf="@+id/locationIcon"
                            android:text="Text"
                            android:textColor="@color/grey_600"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/locationIcon2"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:rotation="45"
                            android:src="@drawable/ic_add"
                            android:tint="@color/grey_600" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/horizontal_line_height"
                        android:layout_marginTop="10dp"
                        android:background="@color/horizontal_line" />

                    <LinearLayout
                        android:id="@+id/whatsAppGroupLinkBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/whatsAppGroupLink"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_act_edit_box_2"
                            android:drawableLeft="@drawable/ic_whatsapp"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_whatsapp_group_link"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:paddingBottom="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/grey_600"
                            android:textColorHint="@color/grey_400"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/horizontal_line_height"
                        android:layout_marginTop="20dp"
                        android:background="@color/horizontal_line"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/act_who_can_invite"
                        android:textColor="@color/deep_purple_400"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/bg_act_edit_box_2"
                        android:paddingBottom="7dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="7dp">

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/visibilityCalendarPicker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:ms_arrow_tint="@color/grey_900"
                            app:ms_background_color="@color/grey_50"
                            app:ms_dropdown_height="wrap_content"
                            app:ms_dropdown_max_height="120dp"
                            app:ms_text_color="@color/grey_900" />

                        <TextView
                            android:id="@+id/feedVisibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/horizontalBottomLine"
                            android:layout_marginTop="2dp"
                            android:text="@string/feed_visibility_1"
                            android:textColor="@color/grey_600"
                            android:textSize="12sp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/guestBox"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/guestText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="@string/act_guests"
                            android:textColor="@color/deep_purple_400"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/guestsNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/box_qty_guests"
                            android:gravity="center"
                            android:paddingBottom="2dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="2dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <include
                        android:id="@+id/profilesPhotos"
                        layout="@layout/list_profiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <include
        layout="@layout/btn_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <include
        android:id="@+id/progressBox"
        layout="@layout/progress_loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>