<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_50"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/actionBar"
        layout="@layout/action_bar" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionBar">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mainBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <LinearLayout
                    android:id="@+id/buttonsBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/whatBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/whatText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/act_menu_what_is_it"
                            android:textAllCaps="true"
                            android:textColor="@color/grey_400"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:id="@+id/whatButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:id="@+id/whatIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_notepad"
                                android:tint="@color/grey_400" />

                            <View
                                android:id="@+id/whatCorners"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/bg_shape_oval_grey_400_corners" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/whereWhenBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/whereWhenText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/act_menu_where_and_when"
                            android:textAllCaps="true"
                            android:textColor="@color/grey_400"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:id="@+id/whereWhenButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:id="@+id/whereWhenIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_calendar_location"
                                android:tint="@color/grey_400" />

                            <View
                                android:id="@+id/whereWhenCorners"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/bg_shape_oval_grey_400_corners" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/whoBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/whoText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/act_menu_who_goes"
                            android:textAllCaps="true"
                            android:textColor="@color/grey_400"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:id="@+id/whoButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp">

                            <ImageView
                                android:id="@+id/whoIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_people_three"
                                android:tint="@color/grey_400" />

                            <View
                                android:id="@+id/whoCorners"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/bg_shape_oval_grey_400_corners" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/pieceBox"
                    android:layout_width="110dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/cubeUpperBoxIcon"
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_cube_upper_box"
                        android:tint="@color/deep_purple_400_light" />

                    <RelativeLayout
                        android:id="@+id/cubeLowerBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cubeUpperBoxIcon"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/cubeLowerBoxIcon"
                            android:layout_width="80dp"
                            android:layout_height="65dp"
                            android:src="@drawable/ic_cube_lower_box"
                            android:tint="@color/deep_purple_400" />

                        <ImageView
                            android:id="@+id/pieceIcon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_add_cube" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/magicWandButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_magic_wand"
                        android:padding="2dp"
                        android:src="@drawable/ic_magic_wand"
                        android:tint="@color/grey_600" />

                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/requiredText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Campos obrigatórios"
                        android:textColor="@color/red_500"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/privacyBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/privacyIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_lock"
                            android:tint="@color/grey_600" />

                        <TextView
                            android:id="@+id/privacyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Text"
                            android:textAllCaps="true"
                            android:textColor="@color/grey_600"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/arrowIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ms__arrow"
                            android:tint="@color/grey_600" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/horizontal_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/horizontal_line" />

            <FrameLayout
                android:id="@+id/contentBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

            </FrameLayout>

            <Space
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:visibility="visible" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/buttonsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_feed_bottom_bar_standard"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <include
            android:id="@+id/deleteButtonBox"
            layout="@layout/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible" />

        <include
            android:id="@+id/checkButtonBox"
            layout="@layout/btn_feed_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible" />

    </LinearLayout>

    <include
        android:id="@+id/confirmationBar"
        layout="@layout/btn_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <include
        android:id="@+id/progressBox"
        layout="@layout/progress_loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>